<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roxy+ Music</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        .music-container {
            width: 95%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            color: #fff;
            padding-bottom: 100px;
        }

        .music-grid {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 30px;
        }

        .player-card {
            background: rgba(19, 19, 26, 0.7);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 24px;
            padding: 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            height: 100%;
            min-height: 500px;
            position: relative;
            overflow: hidden;
        }

        .guild-badge {
            position: absolute;
            top: 20px;
            left: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
            background: rgba(0, 0, 0, 0.6);
            padding: 8px 15px;
            border-radius: 30px;
            border: 1px solid transparent;
        }

        .guild-icon {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            object-fit: cover;
        }

        .guild-info {
            font-size: 0.9rem;
            font-weight: 500;
            color: #ccc;
        }

        .channel-name {
            color: var(--neon-purple);
            font-weight: 700;
            margin-left: 5px;
        }

        .art-wrapper {
            width: 280px;
            height: 280px;
            margin-bottom: 30px;
            position: relative;
        }

        .track-art {
            width: 100%;
            height: 100%;
            border-radius: 20px;
            object-fit: cover;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
            transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .track-art.playing {
            transform: scale(1.05);
            box-shadow: 0 15px 50px rgba(138, 43, 226, 0.4);
        }

        .track-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 5px;
            max-width: 90%;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            background: linear-gradient(to right, #fff, #a29bfe);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .track-artist {
            font-size: 1.1rem;
            color: #888;
            margin-bottom: 30px;
            font-weight: 400;
        }

        .progress-wrapper {
            width: 100%;
            max-width: 500px;
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 30px;
        }

        .time-text {
            font-size: 0.85rem;
            color: #aaa;
            font-family: monospace;
            min-width: 45px;
        }

        .progress-container {
            flex: 1;
            height: 8px;
            background: #333;
            border-radius: 10px;
            position: relative;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: #8a2be2;
            width: 0%;
            border-radius: 10px;
            transition: width 0.5s linear;
            box-shadow: 0 0 15px #8a2be2;
        }

        .controls {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .btn-control {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            font-size: 1.5rem;
            cursor: pointer;
            transition: 0.2s;
            display: flex;
            align-items: center;
            justify-content: center;
            border: none;
            outline: none;
            color: white;
        }

        .btn-control:hover {
            transform: scale(1.1);
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
        }

        .btn-control svg {
            width: 24px;
            height: 24px;
            fill: currentColor;
        }

        /* Previous: Blue */
        .btn-prev {
            background: rgba(52, 152, 219, 0.1);
            color: #3498db;
            border: 1px solid rgba(52, 152, 219, 0.3);
        }

        .btn-prev:hover {
            background: #3498db;
            color: white;
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.4);
        }

        /* Stop: Red */
        .btn-stop {
            background: rgba(255, 71, 87, 0.1);
            color: #ff4757;
            border: 1px solid rgba(255, 71, 87, 0.3);
        }

        .btn-stop:hover {
            background: #ff4757;
            color: white;
            box-shadow: 0 5px 15px rgba(255, 71, 87, 0.4);
        }

        /* Skip: Green */
        .btn-skip {
            background: rgba(46, 204, 113, 0.1);
            color: #2ecc71;
            border: 1px solid rgba(46, 204, 113, 0.3);
        }

        .btn-skip:hover {
            background: #2ecc71;
            color: white;
            box-shadow: 0 5px 15px rgba(46, 204, 113, 0.4);
        }

        .queue-card {
            background: rgba(19, 19, 26, 0.8);
            border-radius: 20px;
            padding: 25px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .queue-header {
            font-size: 1.2rem;
            font-weight: 700;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding-bottom: 15px;
        }

        .queue-list {
            overflow-y: auto;
            flex: 1;
            padding-right: 5px;
            max-height: 500px;
        }

        .queue-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.02);
            margin-bottom: 8px;
            transition: 0.2s;
        }

        .queue-item:hover {
            background: rgba(255, 255, 255, 0.05);
        }

        .q-img {
            width: 45px;
            height: 45px;
            border-radius: 8px;
            object-fit: cover;
        }

        .q-info {
            flex: 1;
            overflow: hidden;
        }

        .q-title {
            font-size: 0.9rem;
            font-weight: 600;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            color: #ddd;
        }

        .q-author {
            font-size: 0.8rem;
            color: #777;
        }

        @media(max-width: 900px) {
            .music-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

<body>
    <div class="music-container">
        <div id="noMusicOverlay"
            style="display: none; position:absolute; top:0; left:0; right:0; bottom:0; flex-direction:column; align-items:center; justify-content:center; padding-top:200px;">
            <div style="font-size:3rem; opacity:0.3;">ðŸŽµ</div>
            <div style="color:#555;">No music playing</div>
        </div>

        <div class="music-grid" id="musicContent">
            <div class="player-card">
                <div class="guild-badge">
                    <img id="guildIcon" src="" class="guild-icon">
                    <div class="guild-info">
                        <span id="guildName">Guild</span> â€¢ <span id="channelName" class="channel-name">#Channel</span>
                    </div>
                </div>

                <div class="art-wrapper">
                    <img id="trackCover" src="" class="track-art playing">
                </div>

                <h1 id="trackTitle" class="track-title">Loading...</h1>
                <div id="trackArtist" class="track-artist">Please wait</div>

                <div class="progress-wrapper">
                    <div id="currTime" class="time-text">0:00</div>
                    <div class="progress-container">
                        <div id="progressBar" class="progress-fill"></div>
                    </div>
                    <div id="totalTime" class="time-text">0:00</div>
                </div>

                <div class="controls">
                    <button class="btn-control btn-prev" onclick="prevSong()" title="Previous">
                        <svg viewBox="0 0 24 24">
                            <path d="M6 6h2v12H6zm3.5 6l8.5 6V6z" />
                        </svg>
                    </button>
                    <button class="btn-control btn-stop" onclick="stopMusic()" title="Stop">
                        <svg viewBox="0 0 24 24">
                            <path d="M6 6h12v12H6z" />
                        </svg>
                    </button>
                    <button class="btn-control btn-skip" onclick="skipSong()" title="Skip">
                        <svg viewBox="0 0 24 24">
                            <path d="M6 18l8.5-6L6 6v12zM16 6v12h2V6h-2z" />
                        </svg>
                    </button>
                </div>
            </div>

            <div class="queue-card">
                <div class="queue-header">
                    <span>Up Next</span>
                    <span id="queueCount"
                        style="background:#8a2be2; padding:2px 8px; border-radius:6px; font-size:0.8rem;">0</span>
                </div>
                <div id="queueList" class="queue-list"></div>
            </div>
        </div>
    </div>

    <%- include('partials/super_button') %>

        <script>
            function formatTime(ms) {
                if (isNaN(ms)) return '0:00';
                const totalSeconds = Math.max(0, Math.floor(ms / 1000));
                const minutes = Math.floor(totalSeconds / 60);
                const seconds = totalSeconds % 60;
                return `${minutes}:${seconds.toString().padStart(2, '0')}`;
            }

            async function updateState() {
                try {
                    const res = await fetch('/api/music/status');
                    const data = await res.json();

                    if (!data.isPlaying || !data.nowPlaying) {
                        document.getElementById('noMusicOverlay').style.display = 'flex';
                        document.getElementById('musicContent').style.visibility = 'hidden';
                        return;
                    }

                    document.getElementById('noMusicOverlay').style.display = 'none';
                    document.getElementById('musicContent').style.visibility = 'visible';

                    document.getElementById('guildName').innerText = data.guildName;
                    document.getElementById('channelName').innerText = data.channelName || 'Voice';
                    document.getElementById('guildIcon').src = data.guildIcon || 'https://cdn.discordapp.com/embed/avatars/0.png';

                    document.getElementById('trackTitle').innerText = data.nowPlaying.title;
                    document.getElementById('trackArtist').innerText = data.nowPlaying.author;
                    document.getElementById('trackCover').src = data.nowPlaying.cover;

                    const percent = data.duration ? Math.min(100, (data.position / data.duration) * 100) : 0;
                    document.getElementById('progressBar').style.width = percent + '%';
                    document.getElementById('currTime').innerText = formatTime(data.position);
                    document.getElementById('totalTime').innerText = formatTime(data.duration);

                    document.getElementById('queueCount').innerText = data.queueCount;
                    const list = document.getElementById('queueList');
                    list.innerHTML = '';

                    if (data.queue.length === 0) list.innerHTML = '<div style="text-align:center; color:#555; margin-top:20px;">Queue is empty</div>';
                    else {
                        data.queue.forEach((song, i) => {
                            const cover = song.cover || 'https://i.imgur.com/2ce2t5e.png';
                            list.innerHTML += `
                        <div class="queue-item">
                            <div style="font-weight:bold; width:20px; color:#555;">${i + 1}</div>
                            <img src="${cover}" class="q-img">
                            <div class="q-info">
                                <div class="q-title">${song.title}</div>
                                <div class="q-author">${song.author}</div>
                            </div>
                        </div>`;
                        });
                    }
                } catch (e) { }
            }

            async function skipSong() { await fetch('/api/music/skip', { method: 'POST' }); updateState(); }
            async function prevSong() { await fetch('/api/music/previous', { method: 'POST' }); updateState(); }
            async function stopMusic() { if (confirm('Stop music?')) await fetch('/api/music/stop', { method: 'POST' }); updateState(); }

            setInterval(updateState, 1000);
            updateState();
        </script>
</body>

</html>