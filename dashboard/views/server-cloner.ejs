<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roxy+ Server Cloner</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
        }

        .cloner-container {
            width: 95%;
            max-width: 1000px;
            margin: 0 auto;
            padding: 40px 20px 100px;
            color: #fff;
        }

        .cloner-header {
            text-align: center;
            margin-bottom: 50px;
        }

        .cloner-header h1 {
            font-size: 3rem;
            font-weight: 800;
            background: linear-gradient(135deg, #fff, #a29bfe);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
            text-shadow: 0 0 30px rgba(138, 43, 226, 0.3);
        }

        .cloner-header p {
            color: #888;
            font-size: 1.2rem;
        }

        .section-card {
            background: rgba(19, 19, 26, 0.8);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
        }

        .server-input-group {
            display: flex;
            gap: 30px;
            align-items: flex-start;
            margin-bottom: 40px;
        }

        .input-wrapper {
            flex: 1;
            min-width: 0;
        }

        .input-label {
            margin-bottom: 12px;
            font-weight: 600;
            color: #ccc;
            display: block;
            font-size: 1.1rem;
        }

        .server-input {
            width: 100%;
            padding: 18px;
            background: #0b0b10;
            border: 1px solid #333;
            color: #fff;
            border-radius: 12px;
            font-family: 'Outfit', sans-serif;
            font-size: 1.1rem;
            transition: 0.3s;
        }

        .server-input:focus {
            border-color: #8a2be2;
            outline: none;
            box-shadow: 0 0 15px rgba(138, 43, 226, 0.2);
        }

        .server-preview {
            background: rgba(0, 0, 0, 0.3);
            padding: 15px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            gap: 15px;
            margin-top: 15px;
            border: 1px solid transparent;
            transition: 0.3s;
            min-height: 80px;
        }

        .server-preview.valid {
            border-color: #2ecc71;
            background: rgba(46, 204, 113, 0.1);
        }

        .server-preview.invalid {
            border-color: #e74c3c;
            background: rgba(231, 76, 60, 0.1);
        }

        .preview-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: #333;
            object-fit: cover;
            flex-shrink: 0;
        }

        .preview-info {
            overflow: hidden;
        }

        .preview-info h3 {
            margin: 0;
            font-size: 1rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .preview-info p {
            margin: 5px 0 0;
            font-size: 0.8rem;
            color: #aaa;
        }

        .perm-tag {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 6px;
            font-size: 0.75rem;
            font-weight: bold;
            margin-top: 5px;
        }

        .perm-ok {
            background: #2ecc71;
            color: #000;
        }

        .perm-bad {
            background: #e74c3c;
            color: #fff;
        }

        .options-title {
            font-size: 1.5rem;
            margin-bottom: 25px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding-bottom: 15px;
            color: #fff;
        }

        .options-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            margin-bottom: 40px;
        }

        .option-item {
            background: rgba(255, 255, 255, 0.03);
            padding: 20px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border: 1px solid rgba(255, 255, 255, 0.05);
            transition: 0.2s;
        }

        .option-item:hover {
            background: rgba(255, 255, 255, 0.06);
            border-color: rgba(255, 255, 255, 0.1);
        }

        .option-label {
            color: #ddd;
            font-weight: 500;
            font-size: 1.1rem;
        }

        .switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 30px;
            flex-shrink: 0;
        }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #222;
            transition: .4s;
            border-radius: 34px;
            border: 1px solid #444;
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 22px;
            width: 22px;
            left: 4px;
            bottom: 3px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked+.slider {
            background-color: #8a2be2;
            border-color: #8a2be2;
        }

        input:checked+.slider:before {
            transform: translateX(30px);
        }

        .action-area {
            text-align: center;
            margin-top: 50px;
        }

        .btn-clone {
            width: 100%;
            background: linear-gradient(90deg, #8a2be2, #6c5ce7);
            color: white;
            border: none;
            padding: 20px;
            border-radius: 15px;
            font-size: 1.3rem;
            font-weight: 700;
            cursor: pointer;
            transition: 0.3s;
            box-shadow: 0 10px 30px rgba(138, 43, 226, 0.3);
            text-transform: uppercase;
            letter-spacing: 2px;
            position: relative;
            overflow: hidden;
        }

        .btn-clone:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(138, 43, 226, 0.5);
            filter: brightness(1.1);
        }

        .btn-clone:disabled {
            background: #333;
            color: #777;
            cursor: not-allowed;
            box-shadow: none;
            transform: none;
        }

        .btn-clone::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }

        .btn-clone:hover::after {
            left: 100%;
        }

        .console-box {
            background: #050508;
            font-family: 'Consolas', 'Courier New', monospace;
            font-size: 0.95rem;
            padding: 25px;
            border-radius: 15px;
            height: 350px;
            overflow-y: auto;
            border: 1px solid #222;
            color: #00ff88;
            margin-top: 30px;
            box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.8);
        }

        .log-line {
            margin-bottom: 8px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            padding-bottom: 4px;
            word-break: break-all;
        }

        .console-box::-webkit-scrollbar {
            width: 8px;
        }

        .console-box::-webkit-scrollbar-track {
            background: #111;
        }

        .console-box::-webkit-scrollbar-thumb {
            background: #333;
            border-radius: 4px;
        }

        .console-box::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

        @media(max-width: 1100px) {
            .cloner-container {
                width: 100%;
                padding: 15px 10px 80px;
                overflow-x: hidden;
            }

            .section-card {
                padding: 20px 15px;
                width: 100%;
                margin-bottom: 20px;
            }

            .cloner-header h1 {
                font-size: 2rem;
            }

            .server-input-group {
                flex-direction: column;
                gap: 20px;
                margin-bottom: 25px;
            }

            .options-grid {
                grid-template-columns: 1fr !important;
                gap: 12px;
                display: flex;
                flex-direction: column;
            }

            .option-item {
                padding: 15px;
                width: 100%;
                display: flex;
                align-items: center;
                justify-content: space-between;
            }

            .option-label {
                font-size: 0.95rem;
                padding-right: 10px;
                max-width: 70%;
                line-height: 1.3;
            }

            .server-input {
                font-size: 16px;
                padding: 12px;
            }

            .cloner-header p {
                font-size: 1rem;
                padding: 0 10px;
            }
        }
    </style>
</head>

<body>

    <div class="cloner-container">
        <div class="cloner-header">
            <h1>Server Cloner</h1>
            <p>Replicate server structures instantly.</p>
        </div>

        <!-- Configuration -->
        <div class="section-card" id="configSection">
            <div class="server-input-group">
                <div class="input-wrapper">
                    <label class="input-label">Source Server ID</label>
                    <input type="text" id="sourceId" class="server-input" placeholder="Enter Source Guild ID"
                        onblur="fetchGuild('source')">
                    <div id="sourcePreview" class="server-preview" style="display:none;"></div>
                </div>
                <div class="input-wrapper">
                    <label class="input-label">Target Server ID</label>
                    <input type="text" id="targetId" class="server-input" placeholder="Enter Target Guild ID"
                        onblur="fetchGuild('target')">
                    <div id="targetPreview" class="server-preview" style="display:none;"></div>
                </div>
            </div>

            <div class="options-title">Cloning Configuration</div>
            <div class="options-grid">
                <div class="option-item">
                    <span class="option-label">Delete Existing Channels</span>
                    <label class="switch"><input type="checkbox" id="delChannels" checked><span
                            class="slider"></span></label>
                </div>
                <div class="option-item">
                    <span class="option-label">Delete Existing Roles</span>
                    <label class="switch"><input type="checkbox" id="delRoles" checked><span
                            class="slider"></span></label>
                </div>
                <div class="option-item">
                    <span class="option-label">Delete Emojis</span>
                    <label class="switch"><input type="checkbox" id="delEmojis" checked><span
                            class="slider"></span></label>
                </div>
                <div class="option-item">
                    <span class="option-label">Clone Channels</span>
                    <label class="switch"><input type="checkbox" id="cloneChannels" checked><span
                            class="slider"></span></label>
                </div>
                <div class="option-item">
                    <span class="option-label">Clone Roles</span>
                    <label class="switch"><input type="checkbox" id="cloneRoles" checked><span
                            class="slider"></span></label>
                </div>
                <div class="option-item">
                    <span class="option-label">Clone Emojis</span>
                    <label class="switch"><input type="checkbox" id="cloneEmojis"><span class="slider"></span></label>
                </div>
                <div class="option-item" style="grid-column: span 2;">
                    <span class="option-label">Update Server Name &amp; Icon</span>
                    <label class="switch"><input type="checkbox" id="updateInfo"><span class="slider"></span></label>
                </div>
            </div>

            <div class="action-area">
                <button class="btn-clone" id="startBtn" onclick="startCloning()">Start Cloning</button>
            </div>
        </div>

        <!-- Console -->
        <div class="section-card">
            <h3 style="margin-bottom: 20px;">Live Progress</h3>
            <div class="console-box" id="consoleBox">
                <div class="log-line" style="color: #666;">Waiting for process to start...</div>
            </div>
        </div>
    </div>

    <%- include('partials/super_button') %>

        <script>
            let isCloning = false;
            let validSource = false;
            let validTarget = false;

            async function fetchGuild(type) {
                const id = document.getElementById(type + 'Id').value;
                const preview = document.getElementById(type + 'Preview');
                if (!id || id.length < 17) {
                    preview.style.display = 'none';
                    if (type === 'source') validSource = false; else validTarget = false;
                    return;
                }

                preview.innerHTML = '<span style="color:#aaa;">Fetching...</span>';
                preview.style.display = 'flex';
                preview.className = 'server-preview';

                try {
                    const res = await fetch('/api/cloner/fetch', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ guildId: id })
                    });
                    const data = await res.json();

                    if (data.success) {
                        let permHtml = '';
                        if (type === 'target') {
                            if (data.isAdmin || data.isOwner) permHtml = '<div class="perm-tag perm-ok">✓ Permission Granted</div>';
                            else permHtml = '<div class="perm-tag perm-bad">✕ Missing Admin/Owner</div>';

                            if (data.isAdmin || data.isOwner) validTarget = true; else validTarget = false;
                        } else {
                            validSource = true;
                        }

                        preview.className = 'server-preview valid';
                        preview.innerHTML = `
                    <img src="${data.icon || 'https://cdn.discordapp.com/embed/avatars/0.png'}" class="preview-icon">
                    <div class="preview-info">
                        <h3>${data.name}</h3>
                        ${permHtml}
                    </div>
                `;
                    } else {
                        if (type === 'source') validSource = false; else validTarget = false;
                        preview.className = 'server-preview invalid';
                        preview.innerHTML = `<span style="color:#ff4757; font-size:0.9rem;">${data.message}</span>`;
                    }
                } catch (e) { console.error(e); }
                checkBtn();
            }

            function checkBtn() {
                const btn = document.getElementById('startBtn');
                if (isCloning) { btn.disabled = true; return; }
                if (validSource && validTarget) btn.disabled = false;
                else btn.disabled = true;
            }

            async function startCloning() {
                if (!validSource || !validTarget) return alert('Please validate Server IDs first.');
                if (!confirm('WARNING: This will modify the target server irreversibly! Proceed?')) return;

                const options = {
                    deleteChannels: document.getElementById('delChannels').checked,
                    deleteRoles: document.getElementById('delRoles').checked,
                    deleteEmojis: document.getElementById('delEmojis').checked,
                    cloneChannels: document.getElementById('cloneChannels').checked,
                    cloneRoles: document.getElementById('cloneRoles').checked,
                    cloneEmojis: document.getElementById('cloneEmojis').checked,
                    updateInfo: document.getElementById('updateInfo').checked
                };

                const sourceId = document.getElementById('sourceId').value;
                const targetId = document.getElementById('targetId').value;

                document.getElementById('startBtn').innerText = "Initializing...";
                document.getElementById('startBtn').disabled = true;

                try {
                    const res = await fetch('/api/cloner/start', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ sourceId, targetId, options })
                    });
                    const data = await res.json();
                    if (data.success) {
                        pollStatus();
                    } else {
                        alert('Error: ' + data.message);
                        document.getElementById('startBtn').innerText = "Start Cloning";
                        checkBtn();
                    }
                } catch (e) { alert(e.message); }
            }

            let logsSeen = 0;

            async function pollStatus() {
                try {
                    const res = await fetch('/api/cloner/status');
                    const data = await res.json();

                    isCloning = data.isRunning;
                    const consoleBox = document.getElementById('consoleBox');

                    if (data.logs.length > logsSeen) {
                        const newLogs = data.logs.slice(logsSeen);
                        newLogs.forEach(l => {
                            const div = document.createElement('div');
                            div.className = 'log-line';
                            div.innerText = l;
                            consoleBox.appendChild(div);
                        });
                        logsSeen = data.logs.length;
                        consoleBox.scrollTop = consoleBox.scrollHeight;
                    } else if (data.logs.length < logsSeen) {
                        // Logs Reset
                        logsSeen = 0;
                        consoleBox.innerHTML = '';
                    }

                    if (isCloning) {
                        document.getElementById('startBtn').innerText = "Cloning in Progress...";
                        document.getElementById('startBtn').disabled = true;
                        setTimeout(pollStatus, 2000);
                    } else {
                        document.getElementById('startBtn').innerText = "Start Cloning";
                        checkBtn();
                    }
                } catch (e) { setTimeout(pollStatus, 5000); }
            }

            pollStatus();

        </script>
</body>

</html>